{
  "name": "mast-sanity",
  "description": "Mast Component Framework for Sanity + Next.js with AI-powered content creation",
  "author": "Corey Moen",
  "license": "MIT",
  "keywords": [
    "Sanity",
    "Next.js",
    "Headless CMS",
    "Visual Editing",
    "Page Builder",
    "Mast",
    "Claude AI"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CoreyMoen/mast-sanity.git"
  },
  "homepage": "https://github.com/CoreyMoen/mast-sanity#readme",
  "bugs": {
    "url": "https://github.com/CoreyMoen/mast-sanity/issues"
  },
  "workspaces": [
    "studio",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "format": "prettier --cache --write .",
    "import-sample-data": "cd studio && sanity dataset import sample-data.tar.gz --replace",
    "lint": "npm run lint --workspace=frontend",
    "seed-layouts": "npx tsx scripts/seed-layout-pages.ts",
    "seed-mast-sanity": "node --env-file=.env scripts/seed-mast-sanity-page.mjs",
    "seed-home": "node --env-file=.env scripts/seed-home-page.mjs",
    "seed-with-images": "npx tsx scripts/upload-images-and-seed.ts",
    "seed-blog-posts": "node --env-file=.env scripts/seed-blog-posts.mjs",
    "type-check": "npm run type-check --workspaces"
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@sanity/client": "^7.13.2",
    "@sanity/prettier-config": "^2.0.2",
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.7.3",
    "tsx": "^4.21.0"
  }
}
